<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="이미지"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/request_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근무지"
        android:textColor="@color/input_register_hint"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/imageview"/>

    <TextView
        android:id="@+id/request_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_address"
        android:layout_alignLeft="@+id/request_address"
        android:text="이름"
        android:textColor="@color/btn_logut_bg"
        android:textSize="14sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bar1"
        android:textSize="14sp"
        android:text=" | "
        android:layout_below="@+id/request_address"
        android:layout_toRightOf="@+id/request_name">
    </TextView>
    <TextView
        android:id="@+id/request_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textColor="@color/input_register_hint"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/bar1"
        android:layout_below="@+id/request_address"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bar2"
        android:textSize="14sp"
        android:text=" | 희망시급 : "
        android:layout_below="@+id/request_address"
        android:layout_toRightOf="@+id/request_age">
    </TextView>
    <TextView
        android:id="@+id/request_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시급"
        android:textColor="@color/input_register_hint"
        android:layout_below="@+id/request_address"
        android:layout_toRightOf="@+id/bar2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/request_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_name"
        android:text="요일"
        android:layout_alignLeft="@+id/request_address"
        android:textSize="14sp">

    </TextView>
    <TextView
        android:id="@+id/request_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@+id/request_date"
        android:layout_below="@+id/request_name"
        android:text="근무시간"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/request_date">
    </TextView>

    <RatingBar
        android:id="@+id/request_starrate"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_date"
        android:layout_alignLeft="@+id/request_address"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1"
        android:theme="@style/CustomRatingBar">
    </RatingBar>


</RelativeLayout>