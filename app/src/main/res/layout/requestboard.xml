<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_shape"
    >
    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/imageview">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="20sp"
        android:text="제목"
        android:layout_toRightOf="@+id/imageview">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/region"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        android:text="근무지"
        android:layout_toRightOf="@+id/title">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/children_name"
        android:textSize="14sp"
        android:text="이름"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bar1"
        android:textSize="14sp"
        android:text=" | "
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/children_name">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:textSize="14sp"
        android:text="나이"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/bar1">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bar2"
        android:textSize="14sp"
        android:text=" | 희망시급 : "
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/age">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_pay"
        android:textSize="14sp"
        android:text="시급"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/bar2">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_date"
        android:textSize="14sp"
        android:text="요일"
        android:layout_below="@+id/children_name"
        android:layout_alignLeft="@+id/title">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_time"
        android:textSize="14sp"
        android:text="근무시간"
        android:layout_marginLeft="30px"
        android:layout_below="@+id/children_name"
        android:layout_toRightOf="@+id/request_date">
    </TextView>

    <RatingBar
        android:id="@+id/request_starrate"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_date"
        android:layout_alignLeft="@+id/title"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1"
        android:theme="@style/CustomRatingBar">
    </RatingBar>







</RelativeLayout>